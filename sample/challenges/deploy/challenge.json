{
  "$schema": "../../doc/challenge.json",
  "name": "Deploy",
  "active": true,
  "challenges": [
    {
      "category": "Sample",
      "value": 0,
      "host": {
        "index": 0
      },
      "descriptions": [
        {
          "language": "en",
          "path": "text/CHAL-EN.md"
        },
        {
          "language": "fr",
          "path": "text/CHAL-FR.md"
        }
      ],
      "flags": [
        {
          "case_sensitive": true,
          "regex": false,
          "values": {
            "type": "env",
            "path": "FLAG",
            "keys": [
              "FLAG"
            ]
          }
        }
      ],
      "attachments": [
        {
          "type": "directory",
          "path": "challenge",
          "name": "source.zip"
        }
      ],
      "hints": [
        {
          "cost": 0,
          "texts": [
            {
              "language": "en",
              "path": "text/HINT-EN.md"
            },
            {
              "language": "fr",
              "path": "text/HINT-FR.md"
            }
          ]
        }
      ]
    }
  ],
  "deploy": [
    {
      "type": "docker",
      "path": "challenge/Dockerfile",
      "ports": [
        {
          "type": "tcp",
          "value": 9001
        }
      ],
      "env": [
        {
          "type": "env",
          "path": "FLAG",
          "keys": [
            "FLAG"
          ]
        }
      ],
      "healthcheck": {
        "test": "netstat -ltn | grep -c 9001",
        "retries": 3,
        "interval": 0.5,
        "timeout": 1.5
      }
    }
  ],
  "test": [
    {
      "type": "docker",
      "path": "Dockerfile.test"
    }
  ]
}