{
    "$schema": "../../schema.json",
    "name": "Static",
    "active": true,
    "challenges": [
      {
        "category": "Sample",
        "value": 0,
        "descriptions": [
          {
            "$type": "english",
            "path": "text/CHAL-EN.md"
          },
          {
            "$type": "french",
            "path": "text/CHAL-FR.md"
          }
        ],
        "flags": [
          {
            "case_sensitive": true,
            "regex": false,
            "values": {
              "$type": "env",
              "path": "FLAG",
              "keys": ["FLAG"]
            }
          }
        ],
        "attachments": [
          {
            "$type": "directory",
            "path": "challenge",
            "name": "source.zip"
          },
          {
            "$type": "file",
            "path": "build/challenge",
            "name": "challenge"
          }
        ],
        "hints": [
          {
            "cost": 0,
            "texts": [
              {
                "$type": "english",
                "path": "text/HINT-EN.md"
              },
              {
                "$type": "french",
                "path": "text/HINT-FR.md"
              }
            ]
          }
        ]
      }
    ],
    "build": [
      {
        "$type": "docker",
        "path": "Dockerfile.build",
        "files": [
          {
            "source": "/build/challenge",
            "destination": "build/challenge"
          }
        ],
        "args": [
          {
            "$type": "env",
            "path": "FLAG",
            "keys": ["FLAG"]
          }
        ]
      }
    ],
    "test": [
      {
        "$type": "docker",
        "path": "Dockerfile.test"
      }
    ]
  }
  