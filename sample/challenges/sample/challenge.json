{
  "$schema": "../../../schema.json",
  "name": "Sample",
  "active": true,
  "challenges": [
    {
      "category": "Reverse Engineering",
      "value": 1,
      "descriptions": [
        {
          "$type": "english",
          "path": "text/0/CHAL-EN.md"
        },
        {
          "$type": "french",
          "path": "text/0/CHAL-FR.md"
        }
      ],
      "flags": [
        {
          "case_sensitive": true,
          "regex": false,
          "values": {
            "$type": "env",
            "path": "FLAG",
            "keys": ["FLAG1"]
          }
        }
      ],
      "attachments": [
        {
          "$type": "directory",
          "path": "challenge/0",
          "name": "source.zip"
        },
        {
          "$type": "file",
          "path": "build/0/sample",
          "name": "challenge"
        }
      ],
      "hints": [
        {
          "cost": 1,
          "texts": [
            {
              "$type": "english",
              "path": "text/0/HINT-EN.md"
            },
            {
              "$type": "french",
              "path": "text/0/HINT-FR.md"
            }
          ]
        }
      ],
      "next": 1
    },
    {
      "name": "2",
      "category": "Reverse Engineering",
      "host": {
        "index": 0
      },
      "value": 2,
      "descriptions": [
        {
          "$type": "english",
          "path": "text/1/CHAL-EN.md"
        },
        {
          "$type": "french",
          "path": "text/1/CHAL-FR.md"
        }
      ],
      "flags": [
        {
          "case_sensitive": true,
          "regex": false,
          "values": {
            "$type": "list",
            "list": ["flag-2"]
          }
        },
        {
          "case_sensitive": true,
          "regex": true,
          "values": {
            "$type": "list",
            "list": ["^flag-2$"]
          }
        }
      ],
      "attachments": [
        {
          "$type": "directory",
          "path": "challenge/1",
          "name": "source.zip"
        }
      ],
      "prerequisites": [0]
    }
  ],
  "deploy": [
    {
      "$type": "docker",
      "name": "sample",
      "path": "challenge/1/Dockerfile",
      "ports": [
        {
          "port": 9001,
          "protocol": "tcp",
          "public": true
        }
      ],
      "args": [
        {
          "$type": "map",
          "map": {
            "BUILD": "BUILD"
          }
        }
      ],
      "env": [
        {
          "$type": "map",
          "map": {
            "FLAG2": "flag-2"
          }
        }
      ],
      "healthcheck": {
        "test": "netstat -ltn | grep -c 9001",
        "retries": 3,
        "start_period": 0,
        "interval": 0.5,
        "timeout": 1.5
      }
    }
  ],
  "build": [
    {
      "$type": "docker",
      "path": "Dockerfile.build",
      "files": [
        {
          "source": "/build/sample",
          "destination": "build/0/sample"
        }
      ],
      "args": [
        {
          "$type": "env",
          "path": "FLAG",
          "keys": ["FLAG1"]
        }
      ]
    }
  ],
  "test": [
    {
      "$type": "docker",
      "path": "Dockerfile.test",
      "challenges": [0, 1]
    }
  ]
}
